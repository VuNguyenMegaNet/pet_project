{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": "vue",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-plusplus": 0,
		"no-var": 1,
		"eqeqeq": 0,
		"space-before-function-paren": 0,
		"no-console": [
			"error",
			{
				"allow": [
					"log"
				]
			}
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}